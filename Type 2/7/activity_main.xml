<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.mac.practicalseven.MainActivity">

    <TextView
        android:id="@+id/course_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Select Course :"
        android:textSize="16sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/course_title_tv"
        android:layout_marginTop="10dp">

        <RadioButton
            android:id="@+id/dept_cs_radio_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computer Science"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:id="@+id/dept_electronics_radio_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Electronics"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:id="@+id/dept_hindi_radio_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hindi"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:id="@+id/dept_english_radio_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:onClick="onRadioButtonClicked"/>

    </RadioGroup>

    <TextView
        android:id="@+id/teacher_incharge_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Dept"
        android:textSize="22sp" />

</RelativeLayout>
